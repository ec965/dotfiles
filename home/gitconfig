[include]
  path = ~/.gitconfig.local
[core]
    pager = ~/.nix-profile/bin/delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[delta]
    side-by-side = true
    syntax-theme = Dracula

[init]
	defaultBranch = main

[pull]
	rebase = true

[pager]
  branch = false

[gpg]
	program = gpg

[credential]
	helper = store
